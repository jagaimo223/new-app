<%
  image_path = Rails.root.join('public/top.jpg')
  base64_image = Base64.strict_encode64(File.read(image_path))
%>

<meta charset="utf-8">
<div style="
  width: 1200px;
  height: 600px;
  position: relative;
  overflow: hidden;
  font-family: sans-serif;
  border: 8px solid #007bff;
  box-sizing: border-box;
">

  <img src="data:image/jpeg;base64,<%= base64_image %>"
    style="
      position: absolute;
      top: 0; left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: blur(10px);
      z-index: 0;
    ">

  <div style="
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  ">
    <h1 style="
      font-size: 60px;
      color: #007bff;
      text-shadow: 2px 2px 6px white;
    ">
      <%= title %>
    </h1>
  </div>
</div>
