<h2>ログイン</h2>

<div class="form-container">

<% if flash[:alert].present? %>
  <p class="flash-message" style="color: red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with url: login_path, method: :post, local: true, data: { turbo: false } do |f| %>
  <div class="form-group">
    <%= f.label :email, t('views.sessions.new.email') %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="form-group">
    <%= f.label :password, t('views.sessions.new.password') %>
    <%= f.password_field :password %>
  </div>

  <div class="btn-container">
    <%= f.submit "ログイン", class: "btn-primary" %>
  </div>
<% end %>

<%= link_to "新規登録はこちら", new_user_path %>
